<div>
 <%= form_for (@blog), :html => {:class => "form-box"}  do |f|%>

   <%= f.label :title, "タイトル", class: "form_label" %>
   <%= f.text_field :title, class: "form_title" %>

   <%= f.label :text, "本文", class: "form_label" %>
   <%= f.text_area :text, rows: "6", class: "form_body" %>

   <%= f.submit "Send", class: "form_btn"  %>

 <% end %>
</div>
